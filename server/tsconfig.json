{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [ "es6", "dom" ],
    "experimentalDecorators": true,
    "allowJs": true,

    // Note, this is only used when compiled directly for vscode
    // Neutrino will ignore this configuration for monaco:
    "outDir": "out",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "build",
    "out"
  ],
  "compileOnSave": false
}
